<Window x:Class="SzamnegyesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <UniformGrid Rows="3" Columns="3" Grid.Row="0"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="A" Click="ButtonA_Click" Margin="5" Width="50"/>
            <Button Content="B" Click="ButtonB_Click" Margin="5" Width="50"/>
            <Button Content="C" Click="ButtonC_Click" Margin="5" Width="50"/>
            <Button Content="D" Click="ButtonD_Click" Margin="5" Width="50"/>
            <Button Content="Reset" Click="Reset_Click" Margin="5" Width="70"/>
        </StackPanel>
    </Grid>
</Window>
